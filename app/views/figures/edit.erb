<form class="" action="/figures/<%= @figure.id %>" method="post">
  <input type="text" name="figure[name]" id="figure_name" value="<%= @figure.name %>">

  <br><br>

  <% @titles.each do |title| %>
    <input type="checkbox" name="figure[title_ids][]" id="title_<%= title.id %>" value="<%= title.id %>" <%= 'checked' if @figure.titles.include?(title) %>><%= title.name %></input><br>
  <% end %>

  <br><br>

  <% @landmarks.each do |landmark| %>
    <input type="checkbox" name="figure[landmark_ids][]" id="landmark_<%= landmark.id %>" value="<%= landmark.id %>" <%= 'checked' if @figure.landmarks.include?(landmark) %>><%= landmark.name %></input>
  <% end %>

  <br><br>

  <input type="text" name="landmark[name]" id="new_landmark" value="">

  <br><br>

  <input type="text" name="title[name]" id="new_title" value="">

  <input type="submit" name="" id="Edit Figure" value="Edit Figure">
</form>
